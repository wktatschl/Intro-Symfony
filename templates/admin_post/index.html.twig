{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Title</th>
                <th>Content</th>
                <th>Slug</th>
                <th>State</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>
                    {% if post.imageName %}   
                        <img src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.title }}"/>
                    {% else %}
                        Pas d'image
                    {% endif %}
                </td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.state == 0 ? "draft" : "published" }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_admin_post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_post_new') }}">Create new</a>
{% endblock %}
